BASEDIRNAME=pwsafe
LANGS=RU DE ES FR ZH PL

ZIP = /usr/local/bin/zip

all: default $(LANGS)

default:
	@cd default ; $(ZIP) -Xqr ../helpEN ./*

$(LANGS):
	@cd $(BASEDIRNAME)$@ ; $(ZIP) -Xqr ../help$@ ./*

clean:
	$(RM) *.zip

.PHONY: all clean default $(LANGS)

